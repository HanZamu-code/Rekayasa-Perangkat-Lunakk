<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/backgroundlogo"
    android:layout_height="match_parent"
    tools:context=".WellcomeActivity">

    <TextView
        android:id="@+id/wellcome"
        android:layout_width="270dp"
        android:gravity="center_horizontal"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:elevation="12dp"
        android:background="@drawable/costumebg2"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Wellcome"
        android:fontFamily="sans-serif"
        android:textColor="#FF1493"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/to"
        android:layout_below="@id/wellcome"
        android:layout_width="100dp"
        android:gravity="center_horizontal"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:elevation="12dp"
        android:background="@drawable/costumebg2"
        android:layout_centerHorizontal="true"
        android:text="To"
        android:fontFamily="sans-serif"
        android:textColor="#FF1493"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnlogin"
        android:layout_below="@+id/to"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="400dp"
        android:textColor="#fff"
        android:layout_marginStart="40dp"
        android:background="@drawable/costumebg3"
        android:layout_marginRight="40dp"
        android:text="login" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnreset"
        android:layout_toEndOf="@+id/to"
        android:layout_marginStart="120dp"
        android:layout_toLeftOf="@+id/btnlogin"
        android:layout_below="@+id/to"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:textColor="#fff"
        android:background="@drawable/costumebg3"
        android:text="Registrasi"
        android:layout_toRightOf="@+id/to" />



</RelativeLayout>